{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2019", "ES2020.Promise", "dom"],
    "outDir": "out",
    "rootDir": "src",
    "composite": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/test"],
  "exclude": ["out", "test-resources", ".vscode-test"]
}
