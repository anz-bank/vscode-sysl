{
    "name": "vscode-sysl",
    "displayName": "Sysl",
    "description": "Write Sysl specs easily with instant visual feedback.",
    "author": "ANZ Bank",
    "publisher": "anz-bank",
    "version": "0.2.1",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/anz-bank/vscode-sysl"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "extension/icon.png",
    "keywords": [],
    "engines": {
        "vscode": "^1.52.0"
    },
    "activationEvents": [
        "onLanguage:sysl"
    ],
    "main": "./out/main.js",
    "contributes": {
        "commands": [
            {
                "command": "sysl.tools.installSyslLsp",
                "title": "Sysl: Install Language Server"
            }
        ],
        "languages": [
            {
                "id": "sysl",
                "aliases": [
                    "Sysl",
                    "sysl"
                ],
                "extensions": [
                    ".sysl"
                ],
                "configuration": "./extension/syntax/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "sysl",
                "scopeName": "source.sysl",
                "path": "./extension/syntax/sysl.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Sysl configuration",
            "properties": {
                "sysl.workspace.root": {
                    "type": "string",
                    "default": ".",
                    "description": "Default root folder for the sysl compiler"
                },
                "sysl.tool.tempOutput": {
                    "type": "string",
                    "default": "",
                    "description": "Relative or Absolute Path where Sysl compiler can generate temporary output"
                },
                "sysl.tool.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "sysl.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "tidy": "prettier --write .",
        "lint": "eslint . --ext .ts,.tsx",
        "compile": "tsc",
        "watch": "tsc -w",
        "package": "vsce package",
        "test": "node out/test/runTest"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "^14.17.5",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "@vscode/test-electron": "^1.6.2",
        "eslint": "^7.32.0",
        "glob": "^7.1.7",
        "mocha": "^9.0.3",
        "prettier": "^2.3.2",
        "typescript": "^4.3.5",
        "vscode-languageclient": "^7.0.0",
        "vscode": "^1.1.37"
    }
}
