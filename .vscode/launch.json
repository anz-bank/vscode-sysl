{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}"],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/renderer/build/**",
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Test Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${workspaceFolder}/extension/test/fixtures/",
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/ui/index",
				"--user-data-dir=${workspaceFolder}/.vscode-test/user-data"
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js",
				"${workspaceFolder}/renderer/build/**"
			]
		},
		{
			"name": "Unit Test Extension",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/ts-node",
			"cwd": "${workspaceFolder}",
			"args": [
				"extension/test/runUnitTest"
			]
		}
	]
}
