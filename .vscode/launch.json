{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/extension",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
			],
			"outFiles": [
				"${workspaceFolder}/packages/extension/out/**/*.js",
				"${workspaceFolder}/packages/renderer/build/**",
			],
		},
		{
			"name": "Test Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${workspaceFolder}/packages/extension/test/fixtures/",
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
				"--extensionTestsPath=${workspaceFolder}/packages/extension/out/test/ui/index",
				"--user-data-dir=${workspaceFolder}/.vscode-test/user-data"
			],
			"outFiles": [
				"${workspaceFolder}/packages/extension/out/test/**/*.js",
				"${workspaceFolder}/packages/renderer/build/**"
			]
		},
		{
			"name": "Unit Test Extension",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/ts-node",
			"cwd": "${workspaceFolder}/packages/extension",
			"args": [
				"test/runUnitTest"
			]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Server",
			"port": 6051,
			"restart": true,
		},
	],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": ["Run Extension", "Attach to Server"]
		}
	]
}
