{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2019", "ES2020.Promise", "dom"],
    "rootDir": "extension",
    "outDir": "out",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["extension"],
  "exclude": ["test-resources", ".vscode-test"]
}
