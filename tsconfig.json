{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "./packages/extension" },
    { "path": "./packages/model" },
    { "path": "./packages/plugin" }
  ],
  "include": ["scripts"],
  "exclude": ["**/node_modules", "test-resources", ".vscode-test"]
}
